{
  "name": "vix-extension",
  "version": "1.0.0",
  "description": "Browser extension to enhance web accessibility",
  "scripts": {
    "lint": "eslint extension/src/**/*.js",
    "lint:fix": "eslint extension/src/**/*.js --fix",
    "format": "prettier --write \"extension/src/**/*.{js,json,md}\"",
    "format:check": "prettier --check \"extension/src/**/*.{js,json,md}\"",
    "prepare": "husky install",
    "start": "cd extension && npx web-ext run --firefox=nightly",
    "convert-ios": "xcrun safari-web-extension-converter . | touch VIX/VIX",
    "start:backend": "cd backend && python app.py",
    "install-backend": "cd backend && pip install -r requirements.txt"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/eslint-parser": "^7.23.10",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
